<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingVertical="10dp"
    android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/textView_attr_ref_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="attr_ref_item_title"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- 아래쪽 텍스트뷰 -->
        <TextView
            android:id="@+id/textView_attr_ref_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_attr_ref_item_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="selection required"
            android:textSize="15sp" />

        <!-- 오른쪽 체크박스 -->
        <CheckBox
            android:id="@+id/checkBox_attr_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:checked="true"
            android:button="@drawable/checkbox_selector" />


</RelativeLayout>