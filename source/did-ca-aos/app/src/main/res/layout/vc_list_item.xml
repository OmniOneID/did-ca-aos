<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/bg_oval"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center|left"
                android:src="@drawable/default_vc"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OpenDID Mobile Licence Driver"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center|left"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="15 Feb 2024"
                android:layout_gravity="center|left"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="15 Feb 2024"
                android:layout_gravity="center|left"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVcStatus"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/label_border_white"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="DEACTIVE" />

                <TextView
                    android:id="@+id/textVc"
                    android:layout_width="40dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/label_border_white"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="VC" />

                <TextView
                    android:id="@+id/textZkp"
                    android:layout_width="40dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/label_border_white"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="ZKP" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>